 // check for keyboard keycodes


  // do not allow anything other than numbers
  if ((e.htmlEvent.keyCode >= 48 && e.htmlEvent.keyCode <= 90) || (e.htmlEvent.keyCode >= 96 && e.htmlEvent.keyCode <= 105) || (e.htmlEvent.keyCode == 8) || (e.htmlEvent.keyCode == 9))
    { return; }

  // ignore the delete key
  if (e.htmlEvent.keyCode == 46) // delete key
    { return; }

  // ignore the left arrow
  if (e.htmlEvent.keyCode == 37) // left arrow key
    { return; }

  // ignore the right arrow
  if (e.htmlEvent.keyCode == 39) // right arrow key
    { return; }

  // ignore decimal point
  if ((e.htmlEvent.keyCode == 110) || (e.htmlEvent.keyCode == 190)) // standard keyboard and laptop keyboard decimal point
    { return; }





