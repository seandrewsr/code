// substring example

// this will display "text to display"
  string _thestring = "text to display: text we do not want to display"; // define the full string
  string _text_to_display = _thestring.Substring(0, _thestring.IndexOf(":") -1); // display text from the left of the colon : character


// basic syntax
string.Substring(0, _the_length_to_get) // get specific number of left hand characters (count) from left part

string.Substring(string.Length - _start, _start) // get specific number of string characters from right side (_start)

string.Substring(_start, _num_of_chars) // get a specific number of string characters (_num_of_chars) starting at a certain point (_start)

string.Substring(_start) // get all string characters starting at a certain point in the string (_start)








